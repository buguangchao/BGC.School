@model BGC.School.Core.Models.Student

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.EnrollDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EnrollDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Enrollments)
        </dt>
        <dd>
            <table class="table">
                <thead>
                    <tr>
                        <th>课程名称</th>
                        <th>成绩</th>
                        <th>分数</th>
                    </tr>
                    </thead>
                    @foreach (var item in Model.Enrollments)
                    {
                        <tr>
                            <td>@Html.DisplayFor(p => item.Course.Title)</td>
                            <td>@Html.DisplayFor(p => item.Grade)</td>
                            <td>@Html.DisplayFor(p => item.Course.Credits)</td>
                        </tr>
                    }

            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
